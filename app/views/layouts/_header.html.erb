<% if current_page? controller: :users, action: :new %>
  <header id="topnav" class="defaultscroll scroll-active">
    <div class="tagline">
      <div class="container">
        <div class="float-left">
          <div class="phone">
            <i class="fa fa-phone" aria-hidden="true"></i> <%= Settings.phone_number %>
          </div>
          <div class="email">
            <%= link_to Settings.empty_path do %>
              <i class="fa fa-envelope" aria-hidden="true"></i> <%= Settings.support_email %>
            <% end %>
          </div>
        </div>
        <div class="float-right">
          <ul class="topbar-list list-unstyled d-flex" style="margin: 11px 0px;">
            <li class="list-inline-item">
              <%= link_to Settings.empty_path do %>
                <i class="fa fa-user" aria-hidden="true"></i>
              <% end %>
            </li>
          </ul>
        </div>
        <div class="clearfix"></div>
      </div>
    </div>
    <div class="container">
      <div>
        <%= link_to root_path, class: "logo" do %>
          <%= image_tag "logo_light.png", class: "logo-light", height: Settings.logo_small %>
          <%= image_tag "logo_dark.png", class: "logo-dark", height: Settings.logo_small %>
        <% end %>
      </div>
      <div class="buy-button">
        <%= link_to t(".post_a_job"), Settings.empty_path, class: "btn btn-primary" %>
      </div>
      <div class="menu-extras">
        <div class="menu-item">
          <%= link_to Settings.empty_path, class: "navbar-toggle" do %>
            <div class="lines">
              <span></span>
              <span></span>
              <span></span>
            </div>
          <% end %>
        </div>
      </div>
      <div id="navigation">
        <ul class="navigation-menu">
          <li><%= link_to t(".home"), root_path %>  </li>
          <li><%= link_to t(".employer"), Settings.empty_path %></li>
          <li><%= link_to t(".candidate"), Settings.empty_path %></li>
          <li><%= link_to t(".contact"), contact_path %></li>
        </ul>
      </div>
    </div>
  </header>
<% end %>
